@page "/"

@using MusicAuthenticationSystem.Data

@inject UserRepository UserRepo

<h1>Welcome, please enter your credentials.</h1>

<div class="row m-5">
    <div class="col-5 bg-light m-2 justify-content-start">
        <div class="p-3 mb-3 bg-dark text-white text-center">
            Log in
        </div>
        <div class="col-5 bg-light m-2 justify-content-start">
            <EditForm Model="@user" OnValidSubmit="Login">
                <label for="username">Username</label>
                <input type="text" id="username" @bind-value="@user.Username" />
                <label for="password">Password</label>
                <input type="text" id="passwordOne" @bind-value="@password" />
                <button class="btn btn-primary mb-1" type="submit">Submit</button>
                <p hidden="@messageHandler">@message</p>
            </EditForm>
        </div>
    </div>
</div>

@code {

    User user = new User();
    string password = "";
    string message = "";

    bool messageHandler = true;

    public void Login()
    {
            Authenticate();
    }

    public void Authenticate()
    {

        if (UserRepo.MatchPassword(user, password))
        {
            messageHandler = false;
            message = "Login successful!";
        }
        else
        {
            messageHandler = false;
            message = "Incorrect password";
        }
    }

    public void RepeatPassword()
    {
        if (UserRepo.MatchPassword(user, password))
            messageHandler = false;
        else
            messageHandler = true;
    }
}